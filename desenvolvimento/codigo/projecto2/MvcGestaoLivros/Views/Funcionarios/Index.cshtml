        });


        function Deletes(id) {
            let str2 = "Tem a certeza, que quer passar a multa de 150.05€? ";
            str2 += ' ' + id;

            // confirm dialog
            alertify.confirm(str2, function (e) {
                if (e) {
                    // user clicked "ok"
                    window.location.href = '@Url.Action("Delete", "Emprestimos")/' + id;
                } else {
                    // user clicked "cancel"
                }
            });
        }

    </script>
}

